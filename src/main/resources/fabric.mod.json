{
  "schemaVersion": 1,
  "id": "soulcapture",
  "version": "${version}",

  "name": "Soul Capture",
  "description": "This mod provides an enchantment that allows mobs to drop their spawn eggs",
  "authors": [
    "soulcapture@bulldog98.de"
  ],
  "contact": {
    "homepage": "https://github.com/bulldog98/soulcapture",
    "sources": "https://github.com/bulldog98/soulcapture"
  },

  "license": "GPL-3",
  "icon": "assets/soulcapture/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "de.bulldog98.soulcapture.SoulCaptureInitializer"
      }
    ]
  },
  "mixins": [
    "soulcapture.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
